<Window x:Class="UefiResourcePackEditor.UI.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UefiResourcePackEditor.UI.Views"
        mc:Ignorable="d"
        Height="300" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Title="About">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="&#xE713;"
                   FontFamily="Segoe MDL2 Assets"
                   FontSize="48"
                   HorizontalAlignment="Center"
                   Foreground="#FF569CD6" />

        <TextBlock Grid.Row="1"
                   Text="UEFI Resource Pack Editor"
                   FontSize="20"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,8" />

        <TextBlock Grid.Row="2"
                   Text="A lightweight tool for viewing and editing UEFI firmware resource packs."
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                   HorizontalAlignment="Center"
                   MaxWidth="400" />

        <TextBlock Grid.Row="3"
                   x:Name="VersionTextBlock"
                   Text="Version: Loading..."
                   HorizontalAlignment="Center"
                   Margin="0,12,0,0"
                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">
            <TextBlock Text="Made with ❤️ by " />
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/NixaVulpi"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    NixaVulpi
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Copy Info"
                    Padding="12,4"
                    Click="CopyInfoButton_Click"
                    Margin="0,0,8,0" />
            <Button Content="Close"
                    Padding="12,4"
                    IsDefault="True"
                    Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
